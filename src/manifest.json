{
  "manifest_version": 2,
  "author": "Santiago",
  "name": "Buscador",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icons/caja.svg",
    "default_title": "Buscar",
    "default_popup": "popup/buscar.html"
  },
  "background": {
    "scripts": [
      "conector.js",
      "background_scripts/buscadorp2p.js",
      "background_scripts/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/*",
        "*://*.bing.com/*",
        "*://*.duckduckgo.com/*"
      ],
      "js": [
        "content_scripts/main.js"
      ]
    }
  ],
  "permissions": [
    "*",
    "storage",
    "management",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "menus",
    "activeTab",
    "notifications",
    "tabs",
    "find",
    "clipboardWrite",
    "contextMenus",
    "sessions"
  ],
  "web_accessible_resources": [
    "*"
  ]
}