{
    "manifest_version" : 2,
    "author" : "Santiago",
    "name" : "Buscador",
    "version": "1.0",

    "browser_action" :
     {
        "default_icon": "icons/caja.png",
        "default_title" : "Buscar"
    },

    "background" : {
        "scripts": ["background_scripts/background.js"],
        "persistent" : false
    },

    "content_scripts": [
        {
        "matches": [
                    "*://*.google.com/*", 
                    "*://*.bing.com/*",
                    "*://*.duckduckgo.com/*"
                    ],
        "js" : [ "content_scripts/main.js"                
         ] 
        }
    ], 

    "permissions": [
	    "*",
	    "tabs",
	    "storage"
	  ]

}